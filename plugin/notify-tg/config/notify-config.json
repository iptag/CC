{
  "version": "1.1.0",
  "description": "Claude Code Telegram notification plugin configuration",
  "telegram": {
    "token": "",
    "chatId": ""
  },
  "events": {
    "Stop": {
      "enabled": true,
      "title": "Claude Response Complete",
      "messageTemplate": "✅ *{{title}}*\n\nProject: `{{projectName}}`\nStatus: Completed",
      "fallbackMessage": "✅ *{{title}}*\n\nProject: `{{projectName}}`\nStatus: Completed"
    },
    "Notification": {
      "enabled": true,
      "title": "Claude Needs Attention",
      "messageTemplate": "⚠️ *{{title}}*\n\nProject: `{{projectName}}`\nMessage: {{message}}",
      "fallbackMessage": "⚠️ *{{title}}*\n\nProject: `{{projectName}}`\nYour confirmation is required"
    }
  }
}
